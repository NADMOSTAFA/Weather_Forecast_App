<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="weatherInfo"
            type="com.nada.weatherapp.data.model.WeatherInfo" />

        <variable
            name="day"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/mealLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f7fd"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="6dp"
                    android:text="@{day}"
                    android:textColor="@color/grayText"
                    android:textSize="14sp"
                    tools:text="Friday" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:id="@+id/weatherImage"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/icon_01n" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:text="@{weatherInfo.weather.get(0).description}"
                            android:textColor="@color/grayText"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="Clear Sky" />
                    </FrameLayout>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginEnd="8dp"
                    android:text='@{String.valueOf(weatherInfo.main.temp_min) + "\u00B0"+ "/"+ String.valueOf(weatherInfo.main.temp_max) + "\u00B0"}'
                    android:textColor="@color/grayText"
                    android:textSize="12sp"
                    tools:text="227.25\\255.02" />
            </FrameLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>