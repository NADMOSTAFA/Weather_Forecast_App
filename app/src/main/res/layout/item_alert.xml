<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="weatherAlert"
            type="com.nada.weatherapp.data.model.WeatherAlert" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:elevation="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="70dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f7fd">

            <ImageView
                android:id="@+id/alarm"
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                android:padding="9dp"
                android:src="@drawable/lightining"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/editTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text='@{weatherAlert.time}'
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/editTitle1"
                app:layout_constraintStart_toEndOf="@+id/alarm"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.488"
                tools:text="02:50 AM" />

            <TextView
                android:id="@+id/editTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:ellipsize="end"
                android:singleLine="true"

                android:text='@{weatherAlert.date}'
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTitle"
                tools:text="18 March" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="275dp"
            android:layout_marginTop="-11dp"
            android:layout_marginEnd="-8dp"
            android:background="@drawable/custom_gradiant_background"
            android:padding="9dp"
            app:srcCompat="@drawable/notification_off"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>
</layout>